package;

#if cpp
import cpp.vm.Gc;
#elseif hl
import hl.Gc;
#elseif java
import java.vm.Gc;
#elseif neko
import neko.vm.Gc;
#end

class MemoryUtils
{
	public static function clearMinor()
	{
		#if (cpp || java || neko)
		Gc.run(false);
		#end
	}

	public static function clearMajor()
	{
		#if cpp
		Gc.run(true);
		Gc.compact();
		#elseif hl
		Gc.major();
		#elseif (java || neko)
		Gc.run(true);
		#end
	}

	public static function enable()
	{
		#if (cpp || hl)
		Gc.enable(true);
		#end
	}

	public static function disable()
	{
		#if (cpp || hl)
		Gc.enable(false);
		#end
	}

	public static inline function currentMemUsage()
	{
		#if cpp
		return Gc.memInfo64(Gc.MEM_INFO_USAGE);
		#elseif sys
		return System.totalMemory;
		#else
		return 0;
		#end
	}
}
